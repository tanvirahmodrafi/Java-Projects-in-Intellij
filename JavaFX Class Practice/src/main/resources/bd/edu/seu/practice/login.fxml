<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="bd.edu.seu.practice.LoginPage">
   <children>
      <Label layoutX="194.0" layoutY="30.0" prefHeight="33.0" prefWidth="212.0" text="Student Admission">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="nameField" layoutX="220.0" layoutY="80.0" promptText="Name" />
      <PasswordField fx:id="passwordField" layoutX="221.0" layoutY="129.0" promptText="Password" />
      <RadioButton layoutX="220.0" layoutY="233.0" mnemonicParsing="false" text="Male">
         <toggleGroup>
            <ToggleGroup fx:id="genderToggle" />
         </toggleGroup>
      </RadioButton>
      <RadioButton layoutX="317.0" layoutY="233.0" mnemonicParsing="false" text="Female" toggleGroup="$genderToggle" />
      <ChoiceBox fx:id="programChoiceBox" layoutX="218.0" layoutY="181.0" prefHeight="33.0" prefWidth="160.0" />
      <TextArea fx:id="textArea" layoutX="200.0" layoutY="259.0" prefHeight="39.0" prefWidth="200.0" />
      <Button layoutX="273.0" layoutY="349.0" mnemonicParsing="false" onAction="#registerController" text="Register" />
      <CheckBox fx:id="agreeCheckBox" layoutX="232.0" layoutY="313.0" mnemonicParsing="false" prefHeight="18.0" prefWidth="130.0" text="Agree to register" />
   </children>
